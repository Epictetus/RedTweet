<div id="user_header">
<p id="user_header_name"><%= user[:name] %></p>
<% if login? -%>

<% if @login_user[:id] == @user[:id]%>
<p>That's you !</p>
<% else -%>

<% if following? @user[:id] -%>
<%= button_to "Remove", :action => :remove, :id => @user[:id] %>
<% else -%>
<%= button_to "Follow", :action => :follow, :id => @user[:id] %>
<% end -%>

<% end -%>

<% end -%>
</div>
